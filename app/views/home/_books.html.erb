<div class="p-6 bg-gray-50 rounded-lg shadow-md mt-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-4 text-right">كتب الشيخ</h1>
  <%= render layout: "components/carousel", locals: { auto_play: true, interval: 5000 } do %>
    <% 10.times.each do %>
      <% Book.all.in_groups_of(3, false).each_with_index do |book_group, index| %>
        <%= render layout: "components/carousel_slide", locals: { active: index == 0 } do %>
          <ul class="flex gap-4 justify-center overflow-x-auto w-full container mx-auto text-right">
            <% book_group.each do |book| %>
              <li class="border bg-white rounded-md p-4 max-w-sm">
                <div class="flex flex-col gap-4">
                  <div class="flex gap-2 w-full">
                    <div class="flex flex-col flex-1">
                      <span class="border bg-gray-100 flex items-center gap-1 rounded-md w-fit px-2">
                        <svg class="size-4" focusable="false" aria-hidden="true" viewBox="0 0 24 24" data-testid="AccessTimeIcon">
                            <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2M12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8"></path>
                            <path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"></path>
                        </svg>
                        <%= book.created_at.strftime("%d %b %Y") %>
                      </span>
                      <span class="mt-auto pb-2 text-right text-xl"><%= book.title %></span>
                      <button class="btn-primary text-sm mt-2">
                        قراءة الكتاب
                      </button>
                    </div>
                    <%= image_tag book.cover.representation(resize_to_fit:[160, 180]), alt: book.title, class: "w-[160px] h-[180px]" %>
                  </div>
                  <div>
                    <h3 class="text-md py-3">نبذة عن الكتاب</h3>
                    <p><%= book.desc %></p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>