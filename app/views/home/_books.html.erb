<div class="p-6 bg-gray-100 rounded-lg shadow-md mt-4">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">كتب الشيخ</h1>
    <ul class="space-y-2 flex flex-row-reverse gap-4 overflow-x-auto w-full">
        <% ["كتاب التوحيد", "رياض الصالحين", "صحيح البخاري", "صحيح مسلم", "زاد المعاد"].sample(3).each do |book| %>
            <li class="text-lg text-gray-700 bg-white p-3 rounded-lg shadow-sm hover:bg-gray-50 transition">
                <%= book %>
            </li>
        <% end %>
    </ul>
</div>