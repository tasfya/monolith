<div class="container mx-auto px-4 py-8 max-w-md" dir="rtl">
  <h1 class="text-3xl font-bold text-center mb-6">تواصل معنا</h1>
  
  <p class="text-gray-700 mb-6 text-center">يسعدنا سماع رأيك! يرجى ملء النموذج أدناه للتواصل معنا.</p>
  
  <%= form_with(model: @contact, url: contact_path, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :name, "الاسم", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", placeholder: "اسمك" %>
      <% if @contact.errors[:name].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:name].first %></p>
      <% end %>
    </div>
    
    <div>
      <%= f.label :email, "البريد الإلكتروني", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", placeholder: "بريدك الإلكتروني" %>
      <% if @contact.errors[:email].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:email].first %></p>
      <% end %>
    </div>
    
    <div>
      <%= f.label :message, "الرسالة", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :message, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", placeholder: "رسالتك" %>
      <% if @contact.errors[:message].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:message].first %></p>
      <% end %>
    </div>
    
    <div>
      <%= f.submit "إرسال الرسالة", class: "w-full bg-amber-600 text-white font-bold py-2 px-4 rounded hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
