<div class="container mx-auto px-4 py-8 max-w-md">
  <h1 class="text-3xl font-bold text-center mb-6">Contact Us</h1>
  
  <p class="text-gray-700 mb-6 text-center">We'd love to hear from you! Please fill out the form below to get in touch with us.</p>
  
  <% if @contact.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded p-4 mb-6">
      <h2 class="text-red-800 font-medium">
        <%= pluralize(@contact.errors.count, "error") %> prevented this message from being sent:
      </h2>
      <ul class="list-disc pl-5 mt-2">
        <% @contact.errors.full_messages.each do |message| %>
          <li class="text-red-700"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with(model: @contact, url: contact_path, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", placeholder: "Your Name" %>
    </div>
    
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", placeholder: "Your Email" %>
    </div>
    
    <div>
      <%= f.label :message, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :message, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm", placeholder: "Your Message" %>
    </div>
    
    <div>
      <%= f.submit "Send Message", class: "w-full bg-amber-600 text-white font-bold py-2 px-4 rounded hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>