<div class="flex flex-wrap items-start gap-4">
  <div class="flex flex-col gap-4 w-full max-w-md items-end">
    <%= render partial: "components/header", locals: { podcast: @podcast } %>
    <%= render partial: "home/books_states" %>
  </div>
  <div class="flex flex-col gap-4 w-full flex-1">
    <div class="border rounded-md mt-4 flex flex-col gap-4">
      <div class="p-4 bg-gray-50 rounded-t-md bg-gray-800 text-white">
        <h1 class="text-3xl font-bold text-right">كتب الشيخ</h1>
      </div>
      <div>
        <h2 class="text-2xl text-right p-4">
          <%= @book.title %>
        </h2>
      </div>
      <div class="flex space-x-4 rtl:space-x-reverse border-dotted border-y-2 border-gray-200 p-4">
        <button class="text-amber-600 btn-ghost px-1" data-action="click->fatwa-list#copy">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-4 md:size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
        </button>
        <button class="text-amber-600 btn-ghost px-1" data-action="click->fatwa-list#bookmark">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-4 md:size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
          </svg>
        </button>
        <button class="text-amber-600 btn-ghost px-1" data-action="click->fatwa-list#share">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-4 md:size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
          </svg>
        </button>
      </div>
      <div>
        <h3 class="text-xl text-right p-3">بطاقة الكتاب</h3>
        <div class="flex flex-col md:flex-row gap-4">
          <div class="w-full">
            <h3 class="text-xl text-amber-400 py-3">نبذة عن الكتاب</h3>
            <div class="flex flex-col flex-1">
              <span class="mt-auto pb-2 text-right text-xl"><%= @book.title %></span>
            </div>
            <p class=""><%= @book.desc %></p>
          </div>
          <%= image_tag @book.cover.representation(resize_to_fit:[160, 180]), alt: @book.title, class: "w-[160px] h-[180px]" %>
        </div>
      </div>
      <div class="p-4">
        <%= link_to "تحميل الكتاب", rails_blob_path(@book.file, disposition: "attachment"), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>