<div data-controller="navbar" class="bg-amber-50 shadow-sm">
  <div class="container mx-auto px-4 py-2 flex flex-wrap items-center gap-8">
    <%= nav_render_social_links %>
    <div class="flex items-center space-x-4">
      <div class="relative" data-controller="dropdown">
        <button data-dropdown-target="toggle" data-action="dropdown#toggle" class="btn-outline flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
          <span class="mr-2"><%= current_user.present? ? current_user.email : "" %></span>
          <span>حساب</span>
        </button>
        <div data-dropdown-target="content" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10 rtl transition-all duration-150 opacity-0 scale-95">
          <div class="py-1 text-center">
            <% if current_user&.present? %>
              <%= link_to "الملف الشخصي", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
              <%= link_to "الإعدادات", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
              <%= button_to "تسجيل الخروج", destroy_user_session_path, method: :delete, class: "w-full block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100", data: { confirm: "هل أنت متأكد أنك تريد تسجيل الخروج؟" } %>
            <% else %>
              <%= link_to "تسجيل الدخول", new_user_session_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
              <%= link_to "إنشاء حساب", new_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="relative w-full">
        <%= link_to podcast_search_results_path(@podcast), class: "outline-none",
              aria: {keyshortcuts: "Meta+k, Control+k"},
              data: {hotkey_target: "shortcut"} do %>
          <div class="flex items-center gap-4 text-start btn-outline">
            <span class="font-mono text-md leading-6">بحث</span>
            <kbd class="inline-flex items-center gap-1 font-mono text-sm leading-6">
              <abbr title="Command" class="no-underline text-amber-600 scale-200">⌘</abbr> K
            </kbd>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-right ml-auto">
      <%= link_to root_path do %>
        <div class="flex items-center">
          <%= image_tag "logo.png", alt: "Logo", class: "h-16 ml-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="bg-white border-t border-amber-100 hidden lg:block">
    <div class="container mx-auto">
      <%= render_nav_links %>
    </div>
  </div>
  <div class="lg:hidden container mx-auto px-4 py-2">
    <button data-action="navbar#toggleMobileMenu" class="text-amber-900 hover:text-amber-600 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  <div data-navbar-target="mobileMenu" class="hidden lg:hidden">
    <%= render_mobile_nav_links %>
  </div>
</div>