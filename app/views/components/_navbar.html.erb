<div data-controller="navbar" class="bg-amber-50 shadow-sm">
  <div class="container mx-auto px-4 py-2 flex flex-wrap items-center gap-8">
    <%= nav_render_social_links %>
    <div class="flex items-center space-x-4">
      <div class="relative" data-controller="dropdown">
        <button data-dropdown-target="toggle" data-action="dropdown#toggle" class="bg-amber-100 hover:bg-amber-200 px-4 py-1 rounded-md border border-amber-300 text-amber-800 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
          <span class="mr-2"><%= current_user.present? ? current_user.email : "" %></span>
          <span>حساب</span>
        </button>
        <div data-dropdown-target="content" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10 rtl transition-all duration-150 opacity-0 scale-95">
          <div class="py-1 text-center">
            <% if current_user&.present? %>
              <%= link_to "الملف الشخصي", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
              <%= link_to "الإعدادات", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
              <%= button_to "تسجيل الخروج", destroy_user_session_path, method: :delete, class: "w-full block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100", data: { confirm: "هل أنت متأكد أنك تريد تسجيل الخروج؟" } %>
            <% else %>
              <%= link_to "تسجيل الدخول", new_user_session_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
              <%= link_to "إنشاء حساب", new_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-amber-100" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="relative w-full">
        <%= form_with url: "/search", method: :get, data: { turbo: false }, class: "flex items-center" do |f| %>
          <%= f.text_field :q, placeholder: "كلمة البحث", class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent rtl" %>
          <button type="submit" class="absolute left-2 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-amber-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        <% end %>
      </div>
    </div>
    <div class="text-right ml-auto">
      <%= link_to root_path do %>
        <div class="flex items-center">
          <%= image_tag "logo.png", alt: "Logo", class: "h-16 ml-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="bg-white border-t border-amber-100 hidden lg:block">
    <div class="container mx-auto">
      <%= render_nav_links %>
    </div>
  </div>
  <div class="lg:hidden container mx-auto px-4 py-2">
    <button data-action="navbar#toggleMobileMenu" class="text-amber-900 hover:text-amber-600 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  <div data-navbar-target="mobileMenu" class="hidden lg:hidden">
    <%= render_mobile_nav_links %>
  </div>
</div>