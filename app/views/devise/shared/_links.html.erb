<div class="text-right">
  <%- if controller_name != 'sessions' %>
    <%= link_to "هل تحتاج إلى تسجيل الدخول؟", new_session_path(resource_name), class: "btn-link text-center w-full" %><br />
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "إنشاء حساب جديد", new_registration_path(resource_name), class: "btn-link text-center w-full" %><br />
  <% end %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "هل نسيت كلمة المرور؟", new_password_path(resource_name), class: "btn-link text-center w-full" %><br />
  <% end %>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "لم تصلك تعليمات تأكيد الحساب؟", new_confirmation_path(resource_name), class: "btn-link text-center w-full" %><br />
  <% end %>
  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "لم تصلك تعليمات فك القفل؟", new_unlock_path(resource_name), class: "btn-link text-center w-full" %><br />
  <% end %>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "تسجيل الدخول باستخدام #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>
