<h2 class="border-b bg-gray-800 text-white text-3xl w-full text-end p-4">تسجيل الدخول</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-4 w-full container mx-auto max-w-lg flex flex-col flex-end gap-2" }) do |f| %>
  <h3 class="text-2xl text-end p-4">تسجيل الدخول إلى حسابك</h3>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field text-end">
    <%= f.label :email, "البريد الإلكتروني" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field text-end">
    <%= f.label :password, "كلمة المرور" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field text-end">
      <%= f.label :remember_me, "تذكرني" %>
      <%= f.check_box :remember_me %>
    </div>
  <% end %>
  <div class="actions text-end">
    <%= f.submit "تسجيل الدخول", class: "w-full btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
